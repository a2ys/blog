---
import Author from "../../components/Author.astro";
import Layout from "../../layouts/Layout.astro";
import { getEntry } from "astro:content";

const { slug } = Astro.params;
if (!slug) {
  throw new Error("Slug is missing.");
}

const entry = await getEntry("blog", slug);
if (!entry) {
  throw new Error(`Post not found for slug: ${slug}`);
}

const authorEntry = await getEntry("author", entry.data.author.id);
if (!authorEntry) {
  throw new Error(`Author not found for reference: ${entry.data.author.id}`);
}

const { Content, remarkPluginFrontmatter } = await entry.render();

if (!entry) {
  throw new Error(`Post not found for slug: ${slug}`);
}
---

<Layout
  title={`${entry.data.title} â€¢ Savant`}
  ogimage={entry.data.thumbnail}
  description={entry.data.description}
>
  <div
    class="mb-12 py-20 bg-gradient-to-br from-gray-900 via-slate-800 to-gray-900 text-white relative overflow-hidden"
  >
    <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent">
    </div>
    <div class="w-[90%] sm:w-[80%] md:w-[75%] lg:w-[60%] mx-auto relative">
      <h1
        class="text-5xl max-[371px]:text-3xl font-black leading-tight tracking-tight"
      >
        {entry.data.title}
      </h1>
      <Author
        slug={entry.data.author.id}
        avatar={authorEntry.data.avatar}
        name={authorEntry.data.name}
        date={entry.data.date}
        minutesRead={remarkPluginFrontmatter.minutesRead}
      />
    </div>
  </div>
  <div class="w-[90%] sm:w-[80%] md:w-[75%] lg:w-[60%] xl:w-[50%] mx-auto">
    <div class="post-body">
      <Content />
    </div>
  </div>
</Layout>

<style is:global>
  .post-body {
    margin-top: 3rem;
    overflow-x: auto;
    word-wrap: break-word;
    overflow-wrap: break-word;
    white-space: normal;
    line-height: 1.7;
  }

  h1 {
    font-size: 2.25rem;
    font-weight: 700;
    margin: 2.5rem 0 1rem 0;
    line-height: 1.3;
    letter-spacing: -0.025em;
  }

  h2 {
    font-size: 2rem;
    font-weight: 700;
    margin: 2rem 0 0.75rem 0;
    line-height: 1.3;
    letter-spacing: -0.02em;
    color: #1f2937;
  }

  h3 {
    font-size: 1.75rem;
    font-weight: 600;
    margin: 1.75rem 0 0.5rem 0;
    line-height: 1.4;
    letter-spacing: -0.015em;
    color: #374151;
  }

  h4 {
    font-size: 1.5rem;
    font-weight: 600;
    margin: 1.5rem 0 0.5rem 0;
    line-height: 1.4;
    color: #374151;
  }

  h5 {
    font-size: 1.25rem;
    font-weight: 600;
    margin: 1.25rem 0 0.25rem 0;
    line-height: 1.4;
    color: #4b5563;
  }

  h6 {
    font-size: 1.125rem;
    font-weight: 700;
    margin: 1rem 0 0.25rem 0;
    line-height: 1.4;
    color: #4b5563;
  }

  p {
    font-size: 1.0625rem;
    margin: 1.25rem 0;
    line-height: 1.7;
    color: #374151;
  }

  p > code,
  li > code {
    background: #f1f5f9;
    border: 1px solid #e2e8f0;
    padding: 0.1875rem 0.4375rem;
    border-radius: 0.375rem;
    font-size: 0.875rem;
    font-weight: 500;
    color: #334155;
    box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
  }

  pre {
    border-radius: 0.75rem;
    padding: 1.5rem;
    margin: 2rem 0;
    background: linear-gradient(135deg, #1e293b 0%, #0f172a 100%);
    border: 1px solid #334155;
    box-shadow:
      0 4px 6px -1px rgba(0, 0, 0, 0.1),
      0 2px 4px -1px rgba(0, 0, 0, 0.06);
    position: relative;
    overflow-x: auto;
    overflow-y: hidden;
    -ms-overflow-style: none;
    scrollbar-width: none;
  }

  pre::-webkit-scrollbar {
    display: none;
  }

  pre::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(148, 163, 184, 0.3),
      transparent
    );
  }

  code {
    font-family: "Roboto Mono", monospace !important;
    font-size: 0.875rem;
    line-height: 1.5;
  }

  pre code {
    background: none;
    border: none;
    padding: 0;
    border-radius: 0;
    color: #e2e8f0;
    box-shadow: none;
  }

  li > pre > code > span.line > span {
    font-size: 0.875rem;
  }

  img {
    max-width: 100%;
    margin: 2rem 0;
    border-radius: 0.375rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  }

  blockquote {
    border-left: 4px solid #3182ce;
    padding: 1.25rem 1.5rem;
    margin: 1.5rem 0;
    background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
    border-radius: 0 0.5rem 0.5rem 0;
    color: #4b5563;
    font-style: italic;
    position: relative;
    box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
  }

  blockquote p {
    margin: 0.5rem 0;
    color: inherit;
  }

  ul {
    list-style-type: disc;
    padding-left: 1.5rem;
    font-size: 1.0625rem;
    margin: 1rem 0;
    color: #374151;
  }

  ol {
    list-style-type: decimal;
    padding-left: 1.5rem;
    font-size: 1.0625rem;
    margin: 1rem 0;
    color: #374151;
  }

  li {
    margin: 0.375rem 0;
    font-size: 1.0625rem;
    line-height: 1.6;
    color: #374151;
  }

  ul ul,
  ol ol,
  ul ol,
  ol ul {
    margin: 0.25rem 0;
  }

  hr {
    border: 0;
    border-top: 1px solid #e5e7eb;
    margin: 3rem 0;
  }

  table {
    width: 100%;
    border-collapse: separate;
    margin: 2rem 0;
    border: 1px solid #e5e7eb;
    font-size: 1rem;
    border-radius: 0.5rem;
    overflow: hidden;
    border-spacing: 0;
    box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
  }

  th {
    text-align: left;
    padding: 0.75rem 1rem;
    border-bottom: 1px solid #d1d5db;
    font-weight: 600;
    font-size: 0.9375rem;
    background-color: #f9fafb;
    color: #374151;
  }

  td {
    padding: 0.75rem 1rem;
    border-bottom: 1px solid #f3f4f6;
    font-size: 0.9375rem;
    color: #4b5563;
  }

  tr:last-child td {
    border-bottom: none;
  }

  tr:hover {
    background-color: #f9fafb;
  }

  .navbar .blog-headers {
    text-decoration: none;
    color: white;
    font-weight: 700;
    @apply text-xl md:text-2xl;
  }

  .monospace-font {
    font-family: "Roboto Mono", monospace !important;
  }

  .post-body a {
    @apply border-b border-dotted border-b-blue-600 text-blue-600;
    transition: all 0.2s ease;
    text-decoration: none;
  }

  .post-body a:hover {
    @apply border-b-blue-800 text-blue-800;
    border-bottom-style: solid;
  }

  span.katex-display {
    overflow-x: auto;
    overflow-y: hidden;
    -ms-overflow-style: none;
    scrollbar-width: none;
    padding: 1.5rem;
    margin: 2rem 0;
    background: linear-gradient(135deg, #fefefe 0%, #f8fafc 100%);
    border: 1px solid #e2e8f0;
    border-radius: 0.75rem;
    box-shadow:
      0 4px 6px -1px rgba(0, 0, 0, 0.1),
      0 1px 2px 0 rgba(0, 0, 0, 0.06);
    position: relative;
  }

  span.katex-display::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(148, 163, 184, 0.3),
      transparent
    );
  }

  span.katex-display::-webkit-scrollbar {
    display: none;
  }

  .katex {
    font-size: 1.1em !important;
  }

  span.katex-display .katex {
    padding: 0;
  }

  .post-body a:focus {
    outline: 2px solid #3182ce;
    outline-offset: 2px;
    border-radius: 0.125rem;
  }

  html {
    scroll-behavior: smooth;
  }
</style>
