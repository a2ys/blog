---
interface Props {
  name: string;
  count?: number;
  styles?: string;
  size?: "sm" | "md" | "lg";
}

const { name, count, styles = "", size = "md" } = Astro.props;

const sizeClasses = {
  sm: "text-xs px-3 py-1",
  md: "text-sm px-4 py-2",
  lg: "text-base px-5 py-3",
};

const tagSlug = name.toLowerCase().replace(/\s+/g, "-");
---

<a
  href={`/tags/${tagSlug}`}
  class:list={[
    "inline-flex items-center transition-all duration-200 rounded-full font-medium",
    "bg-gray-900 text-gray-100 hover:bg-gray-700",
    sizeClasses[size],
    styles,
  ]}
  aria-label={`View all posts tagged with ${name}`}
>
  <span class="mr-0.5 opacity-70">#</span>{name}{
    count !== undefined && (
      <span class="ml-1 text-xs opacity-75">({count})</span>
    )
  }
</a>
