---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";
import AuthorCard from "../../components/AuthorCard.astro";

const authors = await getCollection("author");
---

<Layout
  title="Authors â€¢ Savant"
  description="Meet the authors behind the content on this site."
>
  <div
    class="py-16 flex flex-col items-center w-[90%] md:w-[80%] xl:w-[75%] mx-auto"
  >
    <h1 class="text-4xl sm:text-5xl font-black text-center">Authors</h1>
    <p class="text-lg sm:text-xl text-center mt-4">
      Meet the authors behind the content on this site.
    </p>
    <hr class="border-t-2 border-gray-300 w-1/4 mx-auto mt-8 mb-32" />
    <div class="flex flex-wrap justify-center gap-12">
      {
        authors.map((author) => (
          <AuthorCard
            name={author.data.name}
            bio={author.data.bio}
            avatar={author.data.avatar}
            email={author.data.email}
            twitter={author.data.twitter}
            github={author.data.github}
            slug={author.slug}
          />
        ))
      }
    </div>
  </div>
</Layout>
