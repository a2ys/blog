---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";
import SeriesCard from "../../components/SeriesCard.astro";

const series = await getCollection("series");
---

<Layout
  title="Series â€¢ Savant"
  description="Explore our curated series of articles on various topics."
>
  <div
    class="py-16 flex flex-col items-center w-[90%] md:w-[80%] xl:w-[75%] mx-auto"
  >
    <h1 class="text-4xl sm:text-5xl font-black text-center">Series</h1>
    <p class="text-lg sm:text-xl text-center mt-4">
      Explore our curated collections of related articles.
    </p>
    <hr class="border-t-2 border-gray-300 w-1/4 mx-auto mt-8 mb-32" />

    {
      series.length === 0 ? (
        <div class="text-center">
          <p class="text-xl">No series available yet. Check back soon!</p>
        </div>
      ) : (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {series.map((item) => (
            <SeriesCard
              name={item.data.name}
              description={item.data.description || ""}
              slug={item.slug}
            />
          ))}
        </div>
      )
    }
  </div>
</Layout>
